generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Fund {
  id                        String          @id @default(uuid())
  name                      String
  description               String?
  status                    FundStatus      @default(DRAFT)
  moduleType                ModuleType      @default(FUNDING)
  createdAt                 DateTime        @default(now())
  updatedAt                 DateTime        @updatedAt
  applicationFormAnalysis   Json?
  selectionCriteriaAnalysis Json?
  goodExamplesAnalysis      Json?
  brainAssembledAt          DateTime?
  brainVersion              Int             @default(1)
  fundBrain                 Json?
  outputTemplatesAnalysis   Json?
  openSearchIndex           String?         // OpenSearch index name for RAG embeddings
  backgroundJobs            BackgroundJob[]
  documents                 FundDocument[]
  assessments               Assessment[]

  @@index([moduleType])
  @@map("funds")
}

model FundDocument {
  id           String       @id @default(uuid())
  fundId       String
  documentType DocumentType
  filename     String
  mimeType     String
  fileSize     Int
  s3Key        String
  moduleType   ModuleType   @default(FUNDING)
  uploadedAt   DateTime     @default(now())
  fund         Fund         @relation(fields: [fundId], references: [id], onDelete: Cascade)

  @@index([moduleType])
  @@map("fund_documents")
}

model BackgroundJob {
  id                 String     @id @default(uuid())
  fundId             String
  type               JobType
  status             JobStatus  @default(PENDING)
  progress           Int        @default(0)
  totalDocuments     Int        @default(0)
  processedDocuments Int        @default(0)
  metadata           Json       @default("{}")
  errorMessage       String?
  startedAt          DateTime?
  completedAt        DateTime?
  moduleType         ModuleType @default(FUNDING)
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  fund               Fund       @relation(fields: [fundId], references: [id], onDelete: Cascade)

  @@index([fundId])
  @@index([status])
  @@index([type])
  @@index([moduleType])
  @@map("background_jobs")
}

model Assessment {
  id               String           @id @default(uuid())
  fundId           String
  organizationName String
  projectName      String?
  assessmentType   AssessmentType   @default(AI_POWERED)
  status           AssessmentStatus @default(COMPLETED)
  overallScore     Decimal?         @db.Decimal(5, 2)
  scoringResults   Json
  assessmentData   Json
  moduleType       ModuleType       @default(FUNDING)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  fund             Fund             @relation(fields: [fundId], references: [id], onDelete: Cascade)

  @@index([fundId])
  @@index([status])
  @@index([createdAt])
  @@index([moduleType])
  @@map("assessments")
}

enum DocumentType {
  APPLICATION_FORM
  SELECTION_CRITERIA
  GOOD_EXAMPLES
  OUTPUT_TEMPLATES
}

enum FundStatus {
  DRAFT
  ACTIVE
  CLOSED
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum JobType {
  RAG_PROCESSING
  DOCUMENT_ANALYSIS
}

enum AssessmentType {
  AI_POWERED
  PATTERN_BASED
  MANUAL
}

enum AssessmentStatus {
  DRAFT
  IN_PROGRESS
  COMPLETED
  FAILED
}

enum ModuleType {
  FUNDING
  PROCUREMENT
  PROCUREMENT_ADMIN
  WORLDBANK
  WORLDBANK_ADMIN
}
