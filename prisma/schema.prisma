generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums for the funding system
enum DocumentType {
  APPLICATION_FORM
  SELECTION_CRITERIA
  GOOD_EXAMPLES
}

enum FundStatus {
  DRAFT
  ACTIVE
  CLOSED
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum JobType {
  RAG_PROCESSING
  DOCUMENT_ANALYSIS
}

// Fund model - represents a funding program/scheme
model Fund {
  id          String     @id @default(uuid())
  name        String
  description String?
  status      FundStatus @default(DRAFT)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  // Analysis results from uploaded documents
  applicationFormAnalysis    Json? // DocumentAnalysis from step 1
  selectionCriteriaAnalysis Json? // CriteriaAnalysis from step 2
  goodExamplesAnalysis      Json? // Analysis from step 3
  
  // Relationships
  documents   FundDocument[]
  backgroundJobs BackgroundJob[]
  
  @@map("funds")
}

// FundDocument model - stores file metadata with S3 keys
model FundDocument {
  id           String      @id @default(uuid())
  fundId       String
  documentType DocumentType
  filename     String
  mimeType     String
  fileSize     Int
  s3Key        String      // S3 object key for file access
  uploadedAt   DateTime    @default(now())
  
  // Relationships
  fund         Fund        @relation(fields: [fundId], references: [id], onDelete: Cascade)
  
  @@map("fund_documents")
}

// BackgroundJob model - tracks long-running background tasks
model BackgroundJob {
  id                  String    @id @default(uuid())
  fundId              String
  type                JobType
  status              JobStatus @default(PENDING)
  progress            Int       @default(0) // 0-100 percentage
  totalDocuments      Int       @default(0)
  processedDocuments  Int       @default(0)
  metadata            Json      @default("{}")
  errorMessage        String?
  startedAt           DateTime?
  completedAt         DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  
  // Relationships
  fund                Fund      @relation(fields: [fundId], references: [id], onDelete: Cascade)
  
  @@map("background_jobs")
  @@index([fundId])
  @@index([status])
  @@index([type])
}
